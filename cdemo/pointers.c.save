#include <stdio.h>

int main()
{

  int a;
  int* ptrtoa;

  ptrtoa = &a;

  a = 5;
  printf("The value of a is %d\n", a);

  *ptrtoa = 6;
  printf("The value of a is %d\n", a);

  printf("The value of ptrtoa is %d\n", ptrtoa);
  printf("It stores the value %d\n", *ptrtoa);
  printf("The address of a is %d\n", &a);

  float d = 0;
  float e = 10;

  printf("The value of d is %d\nThe address of d is %d", d, &d);
  printf("The value of e is %d\nThe address of e is %d", e, &e);

  int* ptrtod;
  
  int* ptrtoe = &e;

  int temp = *ptrtod;

  *ptrtod = *ptrtoe;

  *ptrtoe = temp;

}
